{
    "kind": "PersistentVolume",
    "apiVersion": "v1",
    "metadata": {
        "name": "uploads-pv"
    },
    "spec": {
        "storageClassName": "default",
        "capacity": {
            "storage": "5Gi"
        },
        "accessModes": ["ReadWriteOnce"],
        "hostPath": {
            "path": "/src/uploads"
        }
    }
}